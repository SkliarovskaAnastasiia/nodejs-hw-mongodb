        ],
        "summary": "Logout route",
        "operationId": "logout",
        "description": "Logout user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Logged out a user"
          },
          "401": {
